// ==UserScript==
// @name         Bot for Yandex
// @namespace    http://tampermonkey.net/
// @version      0.1
// @description  try to take over the world!
// @author       You
// @match        https://yandex.ru/*
// @match        https://pigmentlab.ru/* 
// @grant        none
// ==/UserScript==

let yandexInput =  document.getElementsById('text')[0];
let keywords = ['пирсинг','тату', 'татуаж', 'pigment lab', 'пигмент  лаб'];
let keyword = keywords[getRandom(0,keywords.length)];
let buttonFind = document.getElementsByClassName('button mini-suggest__button button_theme_websearch button_size_ws-head i-bem button_js_inited')[0];
let i =0;
let links = document.links;

if (buttonFind != undefined){
    let timerId = setInterval(()=>{
        yandexInput.value += keyword[i];
        i++;
        if (i==keyword.length){
            clearInterval(timerId);
            buttonFind.click();
         }
     },1000); //до сюда пофиксила (надо удалить еще атрибут открытия в новой вкладке)
    
}else{
    let links = document.links;

    for(let i=0; i<links.length; i++){
        if(links[i].href.indexOf("pigmentlab") != -1){
            console.log("Ссылка найдена "+links[i]);
            links[i].click();
            break;
        }
    }
}

function getRandom(min,max){
    return Math.floor(Math.random()*(max-min)+min);
}
